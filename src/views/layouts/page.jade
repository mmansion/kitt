doctype html
html(lang='en' ng-app='cytoApp')
  
  head

    meta(charset='utf-8')
    
    title= title
    link(rel='stylesheet' href='/styles/normalize.css')
    link(rel='stylesheet' href='/uikit/dist/css/uikit.css')
    link(rel='stylesheet' href='/uikit/dist/css/uikit.gradient.css')
    link(rel='stylesheet' href='/styles/main.css')
    link(rel='stylesheet' href='/highlightjs/styles/arta.css')

  body(class='uk-height-1-1')

    h4.
      AngularJS + RequireJS

    ul(class='menu')
      li
        a(href='#/view1').
          view1
      li
        a(href='#/view2').
          view2

    div(ng-view)

    hr

    nav(class='navbar' navbar-inverse role='navigation')
      div(class='navbar-header')
        a(class='navbar-brand' ui-sref='#').
          AngularUI Router
      ul(class='nav navbar-nav')
        li
          //state reference
          a(ui-sref='home').
            Home
        li
          //state reference
          a(ui-sref='about').
            About

    div(class='container')
      div(ui-view)

    block content

    //all scripts loaded via requirejs
    script(src='/requirejs/require.js' data-main='/scripts/main')