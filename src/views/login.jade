extends layouts/page

block content

  div(class='uk-vertical-align uk-text-center uk-height-1-1')

    div(class="uk-vertical-align-middle" style="width: 240px;")

      img(class="uk-margin-bottom" width="240" height="120" src="http://placekitten.com/240/120" alt="")

      form(id="cy-login-form" class="uk-panel uk-panel-box uk-form")

        div(class="uk-form-row")
          input(name="username" class="uk-width-1-1 uk-form-large" type="text" placeholder="Username")

        div(class="uk-form-row")
          input(name="password" class="uk-width-1-1 uk-form-large" type="password" placeholder="Password")

        div(class="uk-form-row")
          a(id="cy-login-btn" class="uk-width-1-1 uk-button uk-button-primary uk-button-large" href="#").
            Login

        div(class="uk-form-row uk-text-small")

          label(class="uk-float-left" type="checkbox").
            Remember Me
          a(class="uk-float-right uk-link uk-link-muted" href="#").
            Forgot Password?